<div id="<%= dom_id article %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Service:</strong>
    <%= article.service_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Customer:</strong>
    <%= article.customer_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Meeting point:</strong>
    <%= article.meeting_point %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Start at:</strong>
    <%= article.start_at %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this article", article, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this article', edit_article_path(article), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
